<Page x:Class="sale_of_vehicles.CarCreatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sale_of_vehicles"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      MinHeight="450" MinWidth="800" 
      Width="450" Height="800" 
      FontFamily="{DynamicResource MaterialDesignFont}" FontSize="18">

    <Grid Margin="0 20">
        <Border Background="#dde0e3" BorderThickness="2" CornerRadius="15">
            <ScrollViewer>
                <StackPanel Margin="50 20">
                    <StackPanel Orientation="Horizontal" >
                        <TextBox Text="Type of vehicle" Margin="0 0 50 0"/>

                        <ComboBox x:Name="TypeOfVehicle" SelectionChanged="TypeOfVehicle_Selected">
                            <ComboBoxItem Content="Bus"/>
                            <ComboBoxItem Content="Truck"/>
                        </ComboBox>

                        <StackPanel x:Name="CreatWindow"></StackPanel>
                    </StackPanel>

                </StackPanel>

            </ScrollViewer>
        </Border>
    </Grid>
</Page>
