<Page x:Class="Restaurant.DishCreatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restaurant"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      MinWidth="650px" Height="auto" Width="auto"
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBox IsReadOnly="True" Text="Назва"></TextBox>
                <TextBox x:Name="DishName"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBox IsReadOnly="True" Text="Ціна"></TextBox>
                <TextBox x:Name="DishPrice"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
