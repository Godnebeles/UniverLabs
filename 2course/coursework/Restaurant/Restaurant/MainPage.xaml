<Page x:Class="Restaurant.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restaurant"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>


        <DataGrid x:Name="DataGridDishes" AutoGenerateColumns = "False"
                  IsEnabled="True" IsReadOnly="True"
                  ScrollViewer.VerticalScrollBarVisibility="Visible" 
                  Background="#FF302727" Foreground="#FF302727" >
            
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Dish Name" Binding="{Binding dishName}" />
                <DataGridTextColumn Header="Price" Binding="{Binding price}" />
                <DataGridTextColumn Header="Count Serving" Binding="{Binding count}" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Add" Click="Button_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
