<Window x:Class="Restaurant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="1.8*"/>
        </Grid.RowDefinitions>
        
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Content="Main Window" 
                    Click="ToMenuButton_Click"></Button>
            <Button Grid.Column="1" Content="List of Orders" 
                    Click="ToListOfOrders_Click"></Button>
            <Button Grid.Column="2" Content="Budget Calculator" 
                    Click="ToCalculatorButton_Click"></Button>
        </Grid>

        <Frame Grid.Row="1" x:Name="MainFrame"></Frame>
    </Grid>
</Window>
